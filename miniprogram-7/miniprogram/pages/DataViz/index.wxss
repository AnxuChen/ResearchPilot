/* pages/DataViz/index.wxss */
.page {
    min-height: 100vh;
    padding: 50rpx 40rpx 160rpx;
    background: #f8fbfa;
    position: relative;
    overflow-x: hidden;
    box-sizing: border-box;
  }
  
  /* 渐变背景 */
  .bg .g {
    position: absolute;
    border-radius: 50%;
    filter: blur(120rpx);
    opacity: 0.6;
  }
  
  .g1 {
    width: 500rpx;
    height: 500rpx;
    background: #d1fae5;
    top: -200rpx;
    left: -200rpx;
  }
  
  .g2 {
    width: 400rpx;
    height: 400rpx;
    background: #fde2f2;
    top: 0;
    right: -150rpx;
  }
  
  .g3 {
    width: 500rpx;
    height: 500rpx;
    background: #e0f2fe;
    bottom: -200rpx;
    right: -200rpx;
  }
  
  .g4 {
    width: 400rpx;
    height: 400rpx;
    background: #fef3c7;
    bottom: -150rpx;
    left: -150rpx;
  }
  
  /* 标题 */
  .header {
    margin-bottom: 60rpx;
  }
  
  .title {
    font-size: 64rpx;
    font-weight: 700;
    color: #1a202c;
  }
  
  .title-gradient {
    display: block;
    font-size: 64rpx;
    font-weight: 700;
    background: linear-gradient(90deg, #3dd5c2, #60a5fa);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  
  /* 卡片 */
  .card {
    background: rgba(255,255,255,0.9);
    border-radius: 40rpx;
    padding: 40rpx;
    margin-bottom: 40rpx;
    box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.05);
    position: relative;
  }
  
  /* 上传卡片 */
  .card-title {
    font-size: 34rpx;
    font-weight: 600;
    margin-bottom: 10rpx;
  }
  
  .card-sub {
    font-size: 24rpx;
    color: #718096;
    margin-bottom: 40rpx;
  }
  
  .upload-box {
    height: 260rpx;
    border-radius: 30rpx;
    border: 3rpx dashed #3dd5c2;
    background: rgba(61,213,194,0.08);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: 30rpx;
  }
  
  .upload-icon {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    background: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 40rpx;
    color: #3dd5c2;
    margin-bottom: 20rpx;
  }
  
  .upload-main {
    font-size: 28rpx;
    color: #3dd5c2;
    font-weight: 600;
  }
  
  .upload-sub {
    font-size: 22rpx;
    color: #718096;
    margin-top: 10rpx;
  }
  
  /* Section */
  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30rpx;
  }
  
  .section-title {
    font-size: 36rpx;
    font-weight: 700;
    margin-top: 30rpx;
  }
  
  .view-all {
    font-size: 24rpx;
    color: #3dd5c2;
    font-weight: 600;
  }
  
  /* 模板卡片 */
  .template-row {
    display: flex;
    align-items: center;
    gap: 30rpx;
  }
  
  .icon {
    width: 120rpx;
    height: 120rpx;
    border-radius: 30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 40rpx;
  }
  
  .blue { background: #e0f2fe; color: #3b82f6; }
  .orange { background: #fff7ed; color: #f59e0b; }
  .red { background: #fee2e2; color: #ef4444; }
  
  .template-name {
    display: block;
    font-size: 30rpx;
    font-weight: 700;
  }
  
  .template-desc {
    font-size: 24rpx;
    color: #718096;
    margin-top: 6rpx;
  }
  
  /* 徽章 */
  .badge {
    position: absolute;
    top: 30rpx;
    right: 30rpx;
    padding: 8rpx 20rpx;
    border-radius: 999rpx;
    font-size: 20rpx;
    font-weight: 700;
  }
  
  .popular {
    background: rgba(61,213,194,0.15);
    color: #3dd5c2;
  }
  
  .new {
    background: rgba(255,176,66,0.15);
    color: #f59e0b;
  }
  
  /* 进度条 */
  .progress {
    height: 8rpx;
    background: #edf2f7;
    border-radius: 999rpx;
    margin-top: 30rpx;
  }
  
  .progress-bar {
    width: 70%;
    height: 100%;
    background: #60a5fa;
    border-radius: 999rpx;
  }
  
  /* dots */
  .dots {
    display: flex;
    gap: 10rpx;
    margin-top: 30rpx;
  }
  
  .dot {
    width: 10rpx;
    height: 10rpx;
    border-radius: 50%;
    background: #fbbf24;
    opacity: 0.4;
  }
  
  .dot.active {
    opacity: 1;
  }
  
  /* 生成按钮 */
  .bottom-area {
    position: fixed;
    bottom: 40rpx;
    left: 0;
    width: 100%;
    padding: 0 40rpx;
    box-sizing: border-box;
  }
  
  .generate-btn {
    height: 100rpx;
    border-radius: 50rpx;
    background: linear-gradient(90deg, #3dd5c2, #60a5fa);
    color: white;
    font-size: 30rpx;
    font-weight: 700;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 20rpx 50rpx rgba(61,213,194,0.4);
  }