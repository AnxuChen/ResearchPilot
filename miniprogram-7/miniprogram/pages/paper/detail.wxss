page {
    background: #fcfdfd;
    background-image: radial-gradient(#e5e7eb 1.5rpx, transparent 0);
    background-size: 50rpx 50rpx;
  }
  
  .container {
    padding: 40rpx 40rpx 220rpx 40rpx; /* 增加顶部 padding 替代头图 */
  }
  
  /* --- 1. 顶部标签云 --- */
  .tag-header {
    display: flex;
    flex-wrap: wrap;
    gap: 12rpx;
    align-items: center;
    margin-bottom: 30rpx;
  }
  
  .top-badge {
    font-size: 18rpx;
    font-weight: 800;
    padding: 8rpx 20rpx;
    border-radius: 12rpx;
    text-transform: uppercase;
  }
  
  /* 不同颜色循环 */
  .tag-color-0 { background: #ccfbf1; color: #0f766e; }
  .tag-color-1 { background: #fce7f3; color: #be185d; }
  .tag-color-2 { background: #dbeafe; color: #1d4ed8; }
  .tag-color-3 { background: #fef3c7; color: #b45309; }
  
  .date-text {
    font-size: 20rpx;
    color: #9ca3af;
    margin-left: auto; /* 日期靠右 */
  }
  
  /* --- 2. 标题与作者 --- */
  .main-title {
    font-size: 46rpx;
    font-weight: 800;
    color: #111827;
    line-height: 1.25;
    margin-bottom: 40rpx;
    letter-spacing: -1rpx;
  }
  
  .author-section {
    display: flex;
    align-items: center;
    margin-bottom: 50rpx;
    padding: 10rpx 0;
  }
  
  .avatar-group {
    display: flex;
    margin-right: 24rpx;
  }
  
  .avatar-circle {
    width: 76rpx;
    height: 76rpx;
    border-radius: 50%;
    border: 4rpx solid white;
    box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
  }
  .avt-1 { background: #1a1b2e; }
  .avt-2 { background: #e5e7eb; margin-left: -24rpx; }
  
  .author-info { flex: 1; }
  .author-name {
    display: block;
    font-size: 26rpx;
    font-weight: 700;
    color: #111827;
  }
  .author-role {
    font-size: 18rpx;
    color: #9ca3af;
    letter-spacing: 2rpx;
    font-weight: 600;
  }
  
  /* --- 3. 卡片设计 --- */
  .abstract-card {
    background: white;
    border-radius: 44rpx;
    padding: 40rpx;
    box-shadow: 0 15rpx 35rpx rgba(0, 0, 0, 0.04);
    margin-bottom: 50rpx;
  }
  
  .quote-icon {
    width: 80rpx;
    height: 80rpx;
    background: #f0fdfa;
    color: #2dd4bf;
    border-radius: 14rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 36rpx;
    margin-bottom: 24rpx;
  }
  
  .card-label {
    font-size: 28rpx;
    font-weight: 700;
    margin-bottom: 16rpx;
    color: #111827;
  }
  
  .abstract-text {
    font-size: 25rpx;
    color: #4b5563;
    line-height: 1.7;
  }
  
  .section-header {
    font-size: 32rpx;
    font-weight: 800;
    margin-bottom: 24rpx;
    color: #111827;
  }
  
  .insight-card {
    background: white;
    border-radius: 36rpx;
    padding: 24rpx 30rpx;
    display: flex;
    align-items: center;
    margin-bottom: 16rpx;
    border: 1rpx solid rgba(0,0,0,0.02);
  }
  
  .insight-icon {
    width: 70rpx;
    height: 70rpx;
    flex-shrink: 0;
    border-radius: 20rpx;
    margin-right: 24rpx;
  }
  .icon-yellow { background: #fcb276; }
  .icon-red { background: #f88bc3; }
  
  .insight-title {
    display: block;
    font-size: 24rpx;
    font-weight: 700;
    color: #1f2937;
  }
  .insight-desc {
    font-size: 22rpx;
    color: #6b7280;
  }
  
  /* --- 4. 底部悬浮双按钮 --- */
  .floating-bar {
    position: fixed;
    bottom: 50rpx;
    left: 40rpx;
    right: 40rpx;
    height: 120rpx;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    border-radius: 60rpx;
    display: flex;
    align-items: center;
    padding: 0 20rpx;
    box-shadow: 0 20rpx 50rpx rgba(0, 0, 0, 0.1);
    gap: 20rpx;
    z-index: 100;
  }
  
  .action-btn {
    flex: 1;
    height: 84rpx;
    line-height: 84rpx;
    border-radius: 42rpx;
    font-size: 24rpx;
    font-weight: 700;
    transition: all 0.2s;
  }
  
  .btn-light {
    background: #f3f4f6;
    color: #374151;
  }
  
  .btn-dark {
    background: #111827;
    color: white;
  }
  
  .footer-spacer {
    height: 60rpx;
  }